<h1>Edit a Figure <%=@figure.name%></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
<input type="hidden" name="_method" value="patch">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name" placeholder="<%=@figure.name%>">

  <p>
  <label>Title</label>
  </p>
  <ul>
  <% @titles.each do |title| %>
  <li><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %> id="title_<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>><%= title.name %>
  </li>
    <% end %> 
  </ul> 

  <p>
  <label>Landmark</label>
  </p>
  <ul>
  <% @landmarks.each do |landmark| %>
    <li><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %> id="landmark_<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %></li>   
  <% end %> 
  </ul>

 <p>Create a new Title or Landmark</p>
 <p>Title: <input type="text" name="title[name]" id="new_title"></p>
 <p>Landmark: <input type="text" name="landmark[name]" id="new_landmark"></p>


  <input type="submit" value="Edit Figure">
</form>