<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">

  <p>
  <label>Title</label>
  </p>
  <ul>
  <% @titles.each do |title| %>
  <li><input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"> <%= title.name %></li>  
  <% end %> 
  <li>Create New Title: <input type="text" name="title[name]" id="new_title"></li> 
  </ul>

  <p>
  <label>Landmark</label>
  </p>
  <ul>
  <% @landmarks.each do |landmark| %>
  <li><input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"> <%= landmark.name %></li>  
  <% end %> 
  <li>Create New Landmark: <input type="text" name="landmark[name]" id="new_landmark"></li> 
  </ul>


  <input type="submit" value="Create New Figure">
</form>
